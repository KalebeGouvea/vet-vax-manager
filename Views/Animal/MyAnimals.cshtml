@{
    ViewData["Title"] = "Meus Animais";
    @model List<VetVaxManager.Models.Animal>
}

<div class="text-center">
    <h1 class="display-4">Meus Animais</h1>
    <h4 class="text-muted">Veja todos os animais registrados, suas informações detalhadas, agendamentos e cartão de vacinas</h4>
</div>

<div class="row row-cols-1 row-cols-md-3 g-4 my-4">
@foreach (var animal in Model)
{
    <div class="col">
        <div class="card text-center rounded-card" style="width: 18rem;">
            <img src="/img/animals/picture_animal.png" class="rounded-img card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@animal.Name</h5>
                <h6 class="card-subtitle mb-2 text-muted">Espécie: @animal.Specie.Name</h6>
                <h6 class="card-subtitle mb-2 text-muted">Raça: @animal.Race</h6>
                <h6 class="card-subtitle mb-2 text-muted">Idade: @(DateTime.Today.Year - animal.DateOfBirth.Year) anos</h6>
                <a href="#" class="btn btn-primary mt-2">Ver mais</a>
            </div>
        </div>
    </div>
}
</div>